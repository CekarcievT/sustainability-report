@inherits LayoutComponentBase
@inject SustainabilityReportingUI.Services.MockAuthService AuthService
@inject NavigationManager Navigation

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

@if (AuthService.IsAuthenticated)
{
    <MudText Typo="Typo.subtitle1">Logged in as: @AuthService.UserName (@AuthService.Role)</MudText>
    <MudButton OnClick="Logout" Variant="Variant.Outlined" Color="Color.Secondary" Class="ml-2">Logout</MudButton>
}

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override void OnInitialized()
    {
        // Only redirect if not authenticated and not already on /login
        if (!AuthService.IsAuthenticated && !Navigation.Uri.EndsWith("/login", StringComparison.OrdinalIgnoreCase))
        {
            Navigation.NavigateTo("/login", forceLoad: true);
        }
    }

    private void Logout()
    {
        AuthService.Logout();
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}
